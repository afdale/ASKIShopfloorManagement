<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:background="@drawable/artboard_1"
                                                   android:layout_height="match_parent"
                                                   tools:context=".RejectKomponenFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
            android:text="Rejection Komponen :"
            android:textColor="@color/black"
            android:fontFamily="@font/bahnschrift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textStyle="bold|italic" android:textAllCaps="true"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/qtyET"
            android:textSize="14sp"
            android:hint="Jumlah"
            app:layout_constraintStart_toEndOf="@+id/textView21"
            app:layout_constraintEnd_toEndOf="parent" android:inputType="number"
            app:layout_constraintTop_toTopOf="@+id/textView16" android:layout_marginEnd="32dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Komponen"
            android:textColor="@color/black"
            android:fontFamily="@font/bahnschrift"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/textView11"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/spinnerkodepart"/>
    <TextView
            android:text="Kode Part"
            android:textColor="@color/black"
            android:fontFamily="@font/bahnschrift"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView45" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/pilihanbtn"
            app:layout_constraintEnd_toStartOf="@+id/textView46"/>
    <TextView
            android:text="No. MC"
            android:textColor="@color/black"
            android:fontFamily="@font/bahnschrift"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView22" app:layout_constraintStart_toStartOf="parent"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView23" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mcTVRej"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scanMCRej"
            app:layout_constraintTop_toTopOf="@+id/scanMCRej" android:layout_marginEnd="32dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Jenis NG"
            android:textColor="@color/black"
            android:fontFamily="@font/bahnschrift"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView14" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView19"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Jumlah"
            android:textColor="@color/black"
            android:fontFamily="@font/bahnschrift"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView16" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="14sp"
            android:textStyle="bold" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerreject"
    />
    <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"/>
    <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView46"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView45"
            app:layout_constraintTop_toTopOf="@+id/textView45"
            app:layout_constraintBottom_toBottomOf="@+id/textView45"
            app:layout_constraintEnd_toStartOf="@+id/spinnerkodepart"/>
    <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/textView22" app:layout_constraintStart_toEndOf="@+id/textView22"
            app:layout_constraintEnd_toStartOf="@+id/scanMCRej"/>
    <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintTop_toTopOf="@+id/textView14"/>
    <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintEnd_toStartOf="@+id/qtyET" app:layout_constraintTop_toTopOf="@+id/textView16"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:id="@+id/scanMCRej" android:background="@drawable/scan"
            android:onClick="onscanMCREJ"
            app:layout_constraintStart_toEndOf="@+id/textView23"
            app:layout_constraintEnd_toStartOf="@+id/mcTVRej"
            app:layout_constraintTop_toTopOf="@+id/textView22"/>


    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerpart"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView11" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerpartproc"
            app:layout_constraintStart_toStartOf="@+id/spinnerpart"
            app:layout_constraintEnd_toEndOf="@+id/spinnerpart"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerkodepart"
            app:layout_constraintStart_toEndOf="@+id/textView46"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView45"
            app:layout_constraintBottom_toBottomOf="@+id/textView45" android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Reject Komponen"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/black"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/komptv" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/scanMCRej"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/pilihanbtn"
            android:textStyle="bold"/>
    <TextView
            android:text="Reject Process"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/black"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/proctv"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" app:layout_constraintStart_toEndOf="@+id/pilihanbtn"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/pilihanbtn" android:layout_marginEnd="32dp"/>
    <Switch
            android:track="@drawable/switchline"
            android:thumb="@drawable/switchthumb"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/pilihanbtn" app:layout_constraintEnd_toStartOf="@+id/proctv"
            app:layout_constraintStart_toEndOf="@+id/komptv"
            app:layout_constraintTop_toTopOf="@+id/komptv"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerreject"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintBottom_toBottomOf="@+id/textView14" android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="@+id/textView14"
            android:layout_marginStart="8dp"/>
    <ImageButton
            android:src="@drawable/upload"
            android:scaleType="fitCenter"
            android:background="#00040303"
            android:layout_width="385dp"
            android:layout_height="63dp"
            android:id="@+id/rejectBTN"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qtyET"
            app:layout_constraintVertical_bias="0.345" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>